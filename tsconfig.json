{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "importHelpers": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "baseUrl": "client",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "lib": ["es2015", "dom"]

  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compileOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
